<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.a39275.wallet">

    <uses-permission android:name="android.permission.SCHEDULE_EXACT_ALARM" />

    <application
        android:allowBackup="true"
        android:icon="@drawable/ic_finance"
        android:label="@string/app_name"
        android:roundIcon="@drawable/ic_finance"
        android:supportsRtl="true"
        android:theme="@style/Theme.Wallet">
        <receiver android:name=".model.Notificacao"
            android:enabled="true"/>
        <activity
            android:name=".activity.NotificacoesActivity"
            android:exported="false" />
        <activity
            android:name=".activity.PerfilActivity"
            android:exported="false"
            android:theme="@style/DespesaTheme" />
        <activity
            android:name=".activity.DespesasActivity"
            android:exported="false"
            android:theme="@style/DespesaTheme" />
        <activity
            android:name=".activity.ReceitasActivity"
            android:exported="false"
            android:theme="@style/ReceitaTheme" />
        <activity
            android:name=".activity.HomeActivity"
            android:exported="false"
            android:theme="@style/HomeTheme" />
        <activity
            android:name=".activity.RegistoActivity"
            android:exported="false"
            android:theme="@style/HomeTheme" />
        <activity
            android:name=".activity.LoginActivity"
            android:exported="false"
            android:theme="@style/HomeTheme" />
        <activity
            android:name=".activity.MainActivity"
            android:exported="true"
            android:theme="@style/Theme.Intro">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
    </application>

</manifest>